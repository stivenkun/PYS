@model PYS.IdentityServer.Security.Administration.Authorize.Claims.AddClaimsToUserViewModel

@{
    ViewData["Title"] = "AddAplicationToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Permisos al usuario @Model.UserName</h2>

<h4>Agregar Permisos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAplicationToUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly value="@Model.UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Type" class="control-label" ></label>*@
                <label class="control-label" for="Type">Aplicación</label>
                <select asp-for="Type" class="form-control" asp-items="@(new SelectList(Model.ApiResources, "Name","DisplayName"))">
                    <option>Seleccione una aplicación</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Value" class="control-label"></label>*@
                <label class="control-label" for="Value">Permiso</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Asignar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

