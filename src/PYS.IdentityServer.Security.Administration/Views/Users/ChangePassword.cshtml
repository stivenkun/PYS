@model PYS.IdentityServer.Security.Administration.Authorize.Users.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cambiar Contraseña del usuario @Model.UserName</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="UserName" class="hidden" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

    <a asp-action="Index">Volver</a>
</div>



